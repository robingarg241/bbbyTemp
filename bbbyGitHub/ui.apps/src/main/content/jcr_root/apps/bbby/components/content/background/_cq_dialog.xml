<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Background"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <colorFields
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <color
                                                        fieldLabel="Color"
                                                        jcr:primaryType="nt:unstructured"
                                                        name="./backgroundColor"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <option0 jcr:primaryType="nt:unstructured" text="Transparent" value="bg-transparent"/>
                                                            <option1 jcr:primaryType="nt:unstructured" text="White" value="bg-white"/>
                                                            <option3 jcr:primaryType="nt:unstructured" text="Light Grey" value="bg-light"/>
                                                            <option4 jcr:primaryType="nt:unstructured" text="Grey" value="bbb-grey"/>
                                                        </items>
                                                    </color>
                                                </items>
                                            </colorFields>
                                            <vertSpacingFields
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <topSpacing
                                                        fieldLabel="Top Padding"
                                                        jcr:primaryType="nt:unstructured"
                                                        name="./backgroundTopSpacing"
                                                        multiple="true"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <option1 jcr:primaryType="nt:unstructured" text="1 (4px)" value="pt-1"/>
                                                            <option2 jcr:primaryType="nt:unstructured" text="2 (8px)" value="pt-2"/>
                                                            <option3 jcr:primaryType="nt:unstructured" text="3 (16px)" value="pt-3"/>
                                                            <option4 jcr:primaryType="nt:unstructured" text="4 (24px)" value="pt-4"/>
                                                            <option5 jcr:primaryType="nt:unstructured" text="5 (48px)" value="pt-5"/>

                                                            <option6 jcr:primaryType="nt:unstructured" text="Start Advanced Responsive Options" disabled="true" value="x"/>

                                                            <optionsm1 jcr:primaryType="nt:unstructured" text="1 -- Phone Landscape and Up" value="pt-sm-1"/>
                                                            <optionsm2 jcr:primaryType="nt:unstructured" text="2 -- Phone Landscape and Up" value="pt-sm-2"/>
                                                            <optionsm3 jcr:primaryType="nt:unstructured" text="3 -- Phone Landscape and Up" value="pt-sm-3"/>
                                                            <optionsm4 jcr:primaryType="nt:unstructured" text="4 -- Phone Landscape and Up" value="pt-sm-4"/>
                                                            <optionsm5 jcr:primaryType="nt:unstructured" text="5 -- Phone Landscape and Up" value="pt-sm-5"/>

                                                            <optionmd1 jcr:primaryType="nt:unstructured" text="1 -- Tablet and Up" value="pt-md-1"/>
                                                            <optionmd2 jcr:primaryType="nt:unstructured" text="2 -- Tablet and Up" value="pt-md-2"/>
                                                            <optionmd3 jcr:primaryType="nt:unstructured" text="3 -- Tablet and Up" value="pt-md-3"/>
                                                            <optionmd4 jcr:primaryType="nt:unstructured" text="4 -- Tablet and Up" value="pt-md-4"/>
                                                            <optionmd5 jcr:primaryType="nt:unstructured" text="5 -- Tablet and Up" value="pt-md-5"/>

                                                            <optionlg1 jcr:primaryType="nt:unstructured" text="1 -- Desktop and Up" value="pt-lg-1"/>
                                                            <optionlg2 jcr:primaryType="nt:unstructured" text="2 -- Desktop and Up" value="pt-lg-2"/>
                                                            <optionlg3 jcr:primaryType="nt:unstructured" text="3 -- Desktop and Up" value="pt-lg-3"/>
                                                            <optionlg4 jcr:primaryType="nt:unstructured" text="4 -- Desktop and Up" value="pt-lg-4"/>
                                                            <optionlg5 jcr:primaryType="nt:unstructured" text="5 -- Desktop and Up" value="pt-lg-5"/>
                                                        </items>
                                                    </topSpacing>
                                                    <bottomSpacing
                                                        fieldLabel="Bottom Padding"
                                                        jcr:primaryType="nt:unstructured"
                                                        multiple="true"
                                                        name="./backgroundBottomSpacing"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <option1 jcr:primaryType="nt:unstructured" text="1 (4px)" value="pb-1"/>
                                                            <option2 jcr:primaryType="nt:unstructured" text="2 (8px)" value="pb-2"/>
                                                            <option3 jcr:primaryType="nt:unstructured" text="3 (16px)" value="pb-3"/>
                                                            <option4 jcr:primaryType="nt:unstructured" text="4 (24px)" value="pb-4"/>
                                                            <option5 jcr:primaryType="nt:unstructured" text="5 (48px)" value="pb-5"/>

                                                            <option6 jcr:primaryType="nt:unstructured" text="Start Advanced Responsive Options" disabled="true" value="x"/>

                                                            <optionsm1 jcr:primaryType="nt:unstructured" text="1 -- Phone Landscape and Up" value="pb-sm-1"/>
                                                            <optionsm2 jcr:primaryType="nt:unstructured" text="2 -- Phone Landscape and Up" value="pb-sm-2"/>
                                                            <optionsm3 jcr:primaryType="nt:unstructured" text="3 -- Phone Landscape and Up" value="pb-sm-3"/>
                                                            <optionsm4 jcr:primaryType="nt:unstructured" text="4 -- Phone Landscape and Up" value="pb-sm-4"/>
                                                            <optionsm5 jcr:primaryType="nt:unstructured" text="5 -- Phone Landscape and Up" value="pb-sm-5"/>

                                                            <optionmd1 jcr:primaryType="nt:unstructured" text="1 -- Tablet and Up" value="pb-md-1"/>
                                                            <optionmd2 jcr:primaryType="nt:unstructured" text="2 -- Tablet and Up" value="pb-md-2"/>
                                                            <optionmd3 jcr:primaryType="nt:unstructured" text="3 -- Tablet and Up" value="pb-md-3"/>
                                                            <optionmd4 jcr:primaryType="nt:unstructured" text="4 -- Tablet and Up" value="pb-md-4"/>
                                                            <optionmd5 jcr:primaryType="nt:unstructured" text="5 -- Tablet and Up" value="pb-md-5"/>

                                                            <optionlg1 jcr:primaryType="nt:unstructured" text="1 -- Desktop and Up" value="pb-lg-1"/>
                                                            <optionlg2 jcr:primaryType="nt:unstructured" text="2 -- Desktop and Up" value="pb-lg-2"/>
                                                            <optionlg3 jcr:primaryType="nt:unstructured" text="3 -- Desktop and Up" value="pb-lg-3"/>
                                                            <optionlg4 jcr:primaryType="nt:unstructured" text="4 -- Desktop and Up" value="pb-lg-4"/>
                                                            <optionlg5 jcr:primaryType="nt:unstructured" text="5 -- Desktop and Up" value="pb-lg-5"/>
                                                        </items>
                                                    </bottomSpacing>
                                                </items>
                                            </vertSpacingFields>
                                            <horzSpacingFields
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <horizontalSpacing
                                                        fieldLabel="Horizontal Margin"
                                                        jcr:primaryType="nt:unstructured"
                                                        name="./backgroundHorizontalSpacing"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <option1 jcr:primaryType="nt:unstructured" text="Default" value="_none_"/>
                                                            <option2 jcr:primaryType="nt:unstructured" text="Full Bleed" value="w-100"/>
                                                            <option3 jcr:primaryType="nt:unstructured" text="75% - Tablet and Up" value="w-md-75 mx-auto"/>
                                                            <!-- <optionx1 jcr:primaryType="nt:unstructured" text="1" value="px-1"/>
                                                            <optionx2 jcr:primaryType="nt:unstructured" text="2" value="px-2"/>
                                                            <optionx3 jcr:primaryType="nt:unstructured" text="3" value="px-3"/>
                                                            <optionx4 jcr:primaryType="nt:unstructured" text="4" value="px-4"/>
                                                            <optionx5 jcr:primaryType="nt:unstructured" text="5" value="px-5"/> -->
                                                        </items>
                                                    </horizontalSpacing>
                                                </items>
                                            </horzSpacingFields>
                                            <visibilityFields
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <visibility
                                                        fieldLabel="Visibility"
                                                        fieldDescription="Hide this component at different breakpoints. In edit mode a red background is added if the component would be hidden at the current screen size."
                                                        jcr:primaryType="nt:unstructured"
                                                        name="./visibility"
                                                        multiple="true"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <option0 jcr:primaryType="nt:unstructured" text="Hide for Phone" value="d-only-none"/>
                                                            <option1 jcr:primaryType="nt:unstructured" text="Hide for Phone Landscape" value="d-sm-only-none"/>
                                                            <option2 jcr:primaryType="nt:unstructured" text="Hide for Tablet" value="d-md-only-none"/>
                                                            <option3 jcr:primaryType="nt:unstructured" text="Hide for Desktop" value="d-lg-only-none"/>
                                                            <option4 jcr:primaryType="nt:unstructured" text="Hide for Desktop Wide" value="d-xl-only-none"/>
                                                        </items>
                                                    </visibility>
                                                </items>
                                            </visibilityFields>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
